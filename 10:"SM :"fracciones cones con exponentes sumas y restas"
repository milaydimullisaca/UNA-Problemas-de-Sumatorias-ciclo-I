#include <iostream>
#include <cmath>
using namespace std;
int main() {
    int n;
    cout << "Ingrese nÃºmero de terminos (n): ";
    cin >> n;

    double SN = 0;
    cout << "SN = ";

    for (int i = 1; i <= n; i++) {
        int n = 2 * i - 1; 
        double signo = (i % 2 == 0) ? -1 : 1;
        double numerador = pow(n, 2 * i);
        double denominador = n * (n + 1);

        SN += signo * numerador / denominador;

        if(i == 1) 
            cout << "1^2/" << 1*2;
        else 
            cout << " " << (signo == 1.0 ? "+" : "-") << " " << n << "^" << 2*i << "/" << n << "*" << (n+1);
    }

    cout << " = " << SN << endl;

    return 0;
}
